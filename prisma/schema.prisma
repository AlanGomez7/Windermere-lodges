generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String
  password  String
  role      String    @default("admin")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  avatar    String?
  googleId  String?
  address   String?
  mobile    String?
  slug      String    @unique @default(uuid())
  isBlocked Boolean   @default(false)
  comments  Comment[]
}

model Settings {
  id          String   @id @default(uuid())
  key         String   @unique
  value       String
  category    String   @default("general")
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Visitor {
  id                 String             @id @default(uuid())
  email              String?            @unique
  mobile             String?            @unique
  name               String?
  password           String?
  registrationMethod String?
  socialProvider     String?
  socialProviderId   String?
  verified           Boolean            @default(false)
  verifiedAt         DateTime?
  createdAt          DateTime           @default(now())
  bookings           Booking[]
  verificationCodes  VerificationCode[]
}

model PropertyGalleryImage {
  id         String   @id @default(uuid())
  propertyId String
  url        String
  tag        String
  uploadedAt DateTime @default(now())
  Property   Property @relation(fields: [propertyId], references: [id])
}

model Property {
  id                   String                 @id @default(uuid())
  name                 String
  description          String
  address              String
  refNo                String                 @unique
  longitude            Float
  latitude             Float
  features             String[]               @default([])
  price                Float                  @default(0)
  status               String                 @default("active")
  images               String[]               @default([])
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  guests               Int
  bathrooms            String
  bedrooms             String
  cleaning_fee         Int
  nickname             String
  pets                 Int
  pets_fee             Int
  checkInTime          String?                @default("3 pm")
  checkOutTime         String?                @default("10 am")
  maxStay              Int                    @default(1)
  minStay              Int                    @default(1)
  bookings             Booking[]
  calendar             Calendar[]
  comments             Comment[]
  enquiryBookings      EnquiryBooking[]
  PropertyGalleryImage PropertyGalleryImage[]
}

model Booking {
  id         String   @id @default(uuid())
  propertyId String
  visitorId  String
  from       DateTime
  to         DateTime
  status     String   @default("pending")
  createdAt  DateTime @default(now())
  property   Property @relation(fields: [propertyId], references: [id])
  visitor    Visitor  @relation(fields: [visitorId], references: [id])
  payment    Payment?
}

model VerificationCode {
  id        String   @id @default(uuid())
  visitorId String
  code      String
  type      String
  expiresAt DateTime
  used      Boolean  @default(false)
  visitor   Visitor  @relation(fields: [visitorId], references: [id])
}

model Payment {
  id        String      @id @default(uuid())
  bookingId String      @unique
  stripeId  String
  amount    Float
  status    String
  type      PaymentType @default(INCOME)
  createdAt DateTime    @default(now())
  booking   Booking     @relation(fields: [bookingId], references: [id])
}

model Comment {
  id         String        @id @default(uuid())
  propertyId String
  visitorId  String
  content    String
  rating     Int?
  status     CommentStatus @default(PENDING)
  reply      String?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  property   Property      @relation(fields: [propertyId], references: [id])
  visitor    User          @relation(fields: [visitorId], references: [id])
}

model Enquiry {
  id        String        @id @default(uuid())
  name      String
  email     String
  mobile    String
  subject   String
  message   String
  subscribe Boolean
  status    EnquiryStatus @default(PENDING)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model EnquiryBooking {
  id            String               @id @default(uuid())
  propertyId    String
  firstName     String
  lastName      String?
  email         String
  mobile        String
  arrivalDate   String
  departureDate String
  adults        Int?                 @default(0)
  children      Int?                 @default(0)
  message       String?
  status        EnquiryBookingStatus @default(PENDING)
  createdAt     DateTime             @default(now())
  enquiryId     String               @unique
  pets          Int?                 @default(0)
  userId        String
  payment       PaymentStatus        @default(PENDING)
  amount        Int
  stripeId      String               @unique
  updatedAt     DateTime             @updatedAt
  infant        Int?                 @default(0)
  teens         Int?                 @default(0)
  channel       String?
  reason        String
  timestamp     DateTime?
  coupon        String?
  property      Property             @relation(fields: [propertyId], references: [id])
}

model Calendar {
  id                       String   @id @default(uuid())
  available                Boolean
  refNo                    String
  available_count          Int
  date                     String
  day_rate                 Int
  minimum_length_of_stay   Int
  maximum_available_nights Int
  closed_for_arrival       Boolean
  closed_for_departure     Boolean
  Property                 Property @relation(fields: [refNo], references: [refNo])
}

model Coupon {
  id             String      @id @default(uuid())
  code           String      @unique
  discountType   CouponType
  discountValue  Float
  description    String
  maxUsesPerUser Int         @default(1)
  expiresAt      DateTime?
  isActive       Boolean     @default(true)
  uses           CouponUse[]
}

model CouponUse {
  id       String   @id @default(uuid())
  couponId String
  userId   String
  usedAt   DateTime @default(now())
  coupon   Coupon   @relation(fields: [couponId], references: [id])
}

enum EnquiryStatus {
  PENDING
  REPLIED
}

enum CouponType {
  DISCOUNT
  FIXED
}

enum PaymentType {
  INCOME
  REFUND
  EXPENSE
  MAINTENANCE
}

enum CommentStatus {
  PENDING
  APPROVED
  REJECTED
}

enum EnquiryBookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  SUCCESSFUL
  UNSUCCESSFUL
}
